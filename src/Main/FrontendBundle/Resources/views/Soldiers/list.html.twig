{% extends '::base.html.twig' %}

{% block title %}Soldiers academy{% endblock %}

{% block body %}
    <div ng-controller="SoldiersCtrl">
        <h1>Soldiers academy</h1>

        <form>
            <div class="row">
                <div class="col-xs-3 col-lg-3">
                    <div class="thumbnail">
                        <div style="height: 120px;">
                            <div class="row">
                                <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                                    <img src="bundles/mainfrontend/images/private.png"
                                         alt="Private"
                                         ng-click="openAside('bottom')"
                                         style="cursor: pointer">
                                </div>

                                <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
                                    <div class="row">
                                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                            <div class="pull-right">
                                                <h4>
                                                    <span class="label label-default">100</span>
                                                    <label>
                                                        <input
                                                                type="number"
                                                                style="width: 50px"
                                                                min="0"
                                                                max="999"
                                                                ng-model="soldier.Private.amount"/>
                                                    </label>
                                                    <button class="btn btn-success btn-xs"
                                                            ng-click="add('countdown-timer')"
                                                            ng-disabled="!soldier.Private.amount">
                                                        <span class="glyphicon glyphicon-plus"></span>
                                                    </button>
                                                </h4>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                            <h3 class="pull-right" style="height: 28px;">
                                                <timer interval="1000"
                                                       countdown="timeSummary"
                                                       max-time-unit="'hour'">
                                                    <span ng-show="hours">
                                                        <span ng-bind="hours"></span>h
                                                    </span>
                                                    <span ng-show="minutes">
                                                        <span ng-bind="minutes"></span>min
                                                    </span>
                                                    <span ng-show="seconds > 1">
                                                        <span ng-bind="seconds"></span>sec
                                                    </span>
                                                </timer>
                                            </h3>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                            <progressbar class="progress-striped active"
                                                         max="timeSummary"
                                                         value="timeSummary"
                                                         type="success">
                                            </progressbar>
                                            [[ elapsed ]] na [[ timeSummary ]]
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="caption">
                            <h3>Private</h3>
                            <p><span class="label label-warning">0.3/h</span></p>
                        </div>
                    </div>
                </div>
                <div class="col-xs-3 col-lg-3">
                    <div class="thumbnail">
                        <div style="height: 120px;">
                            <img src="bundles/mainfrontend/images/corporal.png"
                                 alt="Corporal"
                                 ng-click="openAside('bottom')"
                                 style="cursor: pointer">

                            <div class="pull-right">
                                <h4>
                                    <span class="label label-default">1</span>
                                    <label>
                                        <input type="number" style="width: 50px" min="1" max="999"/>
                                    </label>
                                    <button class="btn btn-success btn-xs">
                                        <span class="glyphicon glyphicon-plus"></span>
                                    </button>
                                </h4>
                            </div>
                        </div>
                        <div class="caption">
                            <h3>Corporal</h3>

                            <p>
                                <span class="label label-warning">0.4/h</span>
                                <span class="label label-success">1 tank</span>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-xs-3 col-lg-3">
                    <div class="thumbnail">
                        <div style="height: 120px;">
                            <img src="bundles/mainfrontend/images/sergeant.png"
                                 alt="Sergeant"
                                 ng-click="openAside('bottom')"
                                 style="cursor: pointer">

                            <div class="pull-right">
                                <h4>
                                    <span class="label label-default">1</span>
                                    <label>
                                        <input type="number" style="width: 50px" min="1" max="999"/>
                                    </label>
                                    <button class="btn btn-success btn-xs">
                                        <span class="glyphicon glyphicon-plus"></span>
                                    </button>
                                </h4>
                            </div>
                        </div>
                        <div class="caption">
                            <h3>Sergeant</h3>

                            <p>
                                <span class="label label-warning">0.3/h</span>
                                <span class="label label-success">1 tank</span>
                                <span class="label label-default">1 soldier</span>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-xs-3 col-lg-3">
                    <div class="thumbnail">
                        <div style="height: 120px;">
                            <img src="bundles/mainfrontend/images/warrant-officer.png"
                                 alt="Warrant Officer"
                                 ng-click="openAside('right')"
                                 style="cursor: pointer">

                            <div class="pull-right">
                                <h4>
                                    <span class="label label-default">1</span>
                                    <label>
                                        <input type="number" style="width: 50px" min="1" max="999"/>
                                    </label>
                                    <button class="btn btn-success btn-xs">
                                        <span class="glyphicon glyphicon-plus"></span>
                                    </button>
                                </h4>
                            </div>
                        </div>
                        <div class="caption">
                            <h3>Warrant Officer</h3>

                            <p>
                                <span class="label label-warning">0.3/h</span>
                                <span class="label label-danger">1 hawk</span>
                                <span class="label label-default">1 soldier</span>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>

{% endblock %}